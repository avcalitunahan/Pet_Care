    </header>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                Register Form
            </div>
            <div class="card-body">
                <form action="/auth/register" method="POST">
                    <div class="mb-3">
                        <label for="name">Ad</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="surname">Soyad</label>
                        <input type="text" class="form-control" id="surname" name="surname">
                    </div>
                    <div class="mb-3">
                        <label for="username">Kullanıcı Adı</label>
                        <input type="text" class="form-control" id="username" name="username">
                    </div>
                    <div class="mb-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>
                    
                    <div class="mb-3">
                        <label for="password">Şifre</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    
                    <div class="mb-3">
                        <label for="passwordConfirm">Şifre Tekrar</label>
                        <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm">
                    </div>

                     <div class="mb-3">
                        <label for="city">Kaldığınız Şehir:</label>
                        <select id="city" name="city">
                            <option value="">Şehir Seçiniz</option>
                            {{#each cities}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select><br><br>
                        <label for="petType">Sahip Olduğunuz Evcil Hayvan Türü:</label>
                        <select id="petType" name="petType">
                            <option value="">Hayvan Seçiniz</option>
                            <option value="Kedi">Kedi</option>
                            <option value="Köpek">Köpek</option>
                        </select><br><br>
                    </div>


                    <button type="submit" class="theme-btn-color">Kayıt Ol</button>
                </form>
            </div>
        </div>
        {{#if message}}
            <h4 class="alert alert-success mt-4">{{message}}</h4>
        {{/if}}
    </div>
    <script src="/js/vendor/modernizr-3.5.0.min.js"></script>
